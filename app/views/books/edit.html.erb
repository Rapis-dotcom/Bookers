<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<div>
  <label>Title</label><br>
  <%= f.text_field :title %>
</div>
<div>  
  <label>Body</label><br>
  <%= f.text_area :body %>
</div>

  <div><%= f.submit 'Update Book' %></div>

  <div><%= link_to 'Show', book_path(@book.id) %>
      |
   <%= link_to 'Back', books_path %>
  </div>
  
  
<% end %>